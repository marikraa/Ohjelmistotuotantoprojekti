         </VBox.margin>
      </Label>

              <Button id="signupButton" fx:id="signupButton" mnemonicParsing="false" onAction="#handleSignup" prefHeight="54.0" prefWidth="250.0" styleClass="widget,normaltext" text="Sign up" wrapText="true">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
