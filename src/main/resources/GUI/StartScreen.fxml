            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
      </Button>
        <Label fx:id="notRegisteredLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="422.0" styleClass="smalltext" text="DonÂ´t have account yet?">
