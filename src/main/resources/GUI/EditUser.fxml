<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" styleClass="canvas" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.controllers.EditUserController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
   </padding>
   <Label fx:id="editUserLabel" alignment="CENTER" prefWidth="433.0" styleClass="header" text="Edit user"
          textAlignment="CENTER" wrapText="true" VBox.vgrow="SOMETIMES"/>
   <Button id="editProfile" mnemonicParsing="false" onMouseClicked="#addProfilePicture" prefHeight="19.0"
           prefWidth="13.0" styleClass="widget">
      <graphic>
         <ImageView fitHeight="22.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/edit.png"/>
         </ImageView>
      </graphic>
   </Button>
   <ImageView fx:id="profilePic" fitHeight="257.0" fitWidth="337.0" pickOnBounds="true" preserveRatio="true">
      <VBox.margin>
         <Insets bottom="10.0" left="50.0" right="50.0" top="10.0"/>
      </VBox.margin>
   </ImageView>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <VBox.margin>
         <Insets left="40.0" right="40.0"/>
      </VBox.margin>
      <Label fx:id="userNameLabel" prefHeight="21.0" prefWidth="96.0" styleClass="smalltext" text="Username">
         <VBox.margin>
            <Insets bottom="5.0"/>
         </VBox.margin>
      </Label>
      <TextField fx:id="editUsernameField" onAction="#updateUser" prefHeight="41.0">
         <font>
            <Font size="17.0"/>
         </font>
         <styleClass>
            <String fx:value="widget"/>
            <String fx:value="smalltext"/>
         </styleClass>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </TextField>
      <Label fx:id="oldPasswordLabel" styleClass="smalltext" text="Old password">
         <VBox.margin>
            <Insets bottom="5.0"/>
         </VBox.margin>
      </Label>
      <PasswordField fx:id="oldPasswordField" onAction="#updateUser" prefHeight="41.0">
         <font>
            <Font size="17.0"/>
         </font>
         <styleClass>
            <String fx:value="widget"/>
            <String fx:value="smalltext"/>
         </styleClass>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </PasswordField>
      <Label fx:id="newPasswordLabel" styleClass="smalltext" text="New password">
         <VBox.margin>
            <Insets bottom="5.0"/>
         </VBox.margin>
      </Label>
      <PasswordField fx:id="newPasswordField" prefHeight="41.0">
         <font>
            <Font size="17.0"/>
         </font>
         <styleClass>
            <String fx:value="widget"/>
            <String fx:value="smalltext"/>
         </styleClass>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </PasswordField>
   </VBox>
   <Button fx:id="editUserButton" mnemonicParsing="false" onMouseClicked="#updateUser" prefHeight="41.0"
           text="Save changes">
      <VBox.margin>
         <Insets bottom="10.0" top="10.0"/>
      </VBox.margin>
      <styleClass>
         <String fx:value="widget"/>
         <String fx:value="smalltext"/>
         <String fx:value="accept"/>
      </styleClass>
   </Button>
   <Button fx:id="deleteUserButton" mnemonicParsing="false" onMouseClicked="#deleteUser" prefHeight="41.0"
           text="Delete account">
      <VBox.margin>
         <Insets bottom="10.0" top="10.0"/>
      </VBox.margin>
      <styleClass>
         <String fx:value="widget"/>
         <String fx:value="smalltext"/>
         <String fx:value="delete"/>
      </styleClass>
   </Button>
</VBox>
